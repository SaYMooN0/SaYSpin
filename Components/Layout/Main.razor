@inherits LayoutComponentBase
@inject AppController allGameController

<ItemInfoDisplayDialog />
@if (allGameController.IsGameRunning())
{
    <div class="main-container">
        <div class="sidebar">
            <GameNavLayout />
        </div>
        <div class="page-content">
            @Body
        </div>
    </div>
}
else
{
    <div class="starting-screen">
        <div class="starting-screen-links-container">
            <NavLink class="starting-screen-link" href="run_preparing">
                New run
            </NavLink>
            <button>Upgrades</button>
            <button>Achievements</button>
            <button>Last Runs</button>
            <button>Settings</button>
            <button>Exit</button>
        </div>
    </div>

}