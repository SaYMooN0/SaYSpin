@page "/"
@inject AppMainController mainAppController

@code {
    public GameplayController gameController;
    private NewStagePickingDialog newStagePickingDialog;
    protected override void OnInitialized()
    {
        gameController = mainAppController.Game;
        gameController.OnNewStageStarted += (newStageNumber) => newStagePickingDialog.OpenPickingDialog(newStageNumber);

    }
}
<div class="home-page-container">
    <div class="home-central">
        <SlotMachineComponent SlotMachine="@gameController.SlotMachine" />
        @if (gameController.CoinsEnoughToCompleteTheStage())
        {
            <div class="container-for-complete-stage">
                <StageProgressBar CurrentCoins="@gameController.CoinsCount" CoinsNeeded="@gameController.CoinsNeededToCompleteTheStage" CurrentStage="@gameController.CurrentStage" />
                <button @onclick="CompleteStage">Finish stage</button>
            </div>
        }
        else
        {
        <StageProgressBar CurrentCoins="@gameController.CoinsCount" CoinsNeeded="@gameController.CoinsNeededToCompleteTheStage" CurrentStage="@gameController.CurrentStage" />
        }
        @if (gameController.SpinsLeft > 0)
        {
           
            <button @onclick="SpinSlotMachine" class="spin-button unselectable">
                @gameController.SpinsLeft
                <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" transform="rotate(180)">
                    <path d="M12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 9.20261 3.14864 6.67349 5 4.85857" stroke="#000000" stroke-width="1.5" stroke-linecap="round" />
                    <path d="M5 12C5 15.866 8.13401 19 12 19C15.866 19 19 15.866 19 12C19 8.13401 15.866 5 12 5" stroke="#000000" stroke-width="1.5" stroke-linecap="round" />
                    <path d="M12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8" stroke="#000000" stroke-width="1.5" stroke-linecap="round" />
                </svg>
            </button>
        }
        else
        {
            <label>No spins left</label>
        }
    </div>
    <InventoryComponent inventory="gameController.Inventory" />
</div>
<NewStagePickingDialog @ref="newStagePickingDialog" gameController="@gameController" />

@code {

