                        <path d="M12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8" stroke="#000000" stroke-width="1.5" stroke-linecap="round" />
                    </svg>
                </button>
            }
            else
            {
                <label>No spins left</label>
            }
        </div>
      
    </div>
    <InventoryComponent inventory="gameFlowController.Inventory" />
</div>
<NewStageItemsChoosingDialog @ref="newStageDialog" />

@code {

    private void SpinSlotMachine()
    {
        gameFlowController.SpinSlotMachine();
        if (gameFlowController.SpinsLeft <= 0)
        {
