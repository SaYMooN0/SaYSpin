            </svg>
        </RunInfoLinkButton>

        <RunInfoLinkButton color="#ffaa18" text="All Tile Items" onclick="()=>{ActiveTab = InfoPageTabs.TileItems;}">
            <svg fill="#000000" viewBox="-5.5 0 32 32" version="1.1">
                <path d="M0 11.531h5.938v-5.938h-5.938v5.938zM7.438 11.531h5.938v-5.938h-5.938v5.938zM14.844 11.531h5.969v-5.938h-5.969v5.938zM0 18.969h5.938v-5.938h-5.938v5.938zM7.438 18.969h5.938v-5.938h-5.938v5.938zM14.844 18.969h5.969v-5.938h-5.969v5.938zM0 26.406h5.938v-5.969h-5.938v5.969zM7.438 26.406h5.938v-5.969h-5.938v5.969zM14.844 26.406h5.969v-5.969h-5.969v5.969z"></path>
            </svg>
        </RunInfoLinkButton>

        <RunInfoLinkButton color="#ffaa18" text="Console" onclick="()=>{ActiveTab = InfoPageTabs.Console;}">
            <svg viewBox="0 0 576 512">
                <path d="M9.4 86.6C-3.1 74.1-3.1 53.9 9.4 41.4s32.8-12.5 45.3 0l192 192c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L178.7 256 9.4 86.6zM256 416H544c17.7 0 32 14.3 32 32s-14.3 32-32 32H256c-17.7 0-32-14.3-32-32s14.3-32 32-32z" />
            </svg>
        </RunInfoLinkButton>
    </div>
    <div class="info-page-content">
        @switch (ActiveTab)
        {
            case InfoPageTabs.Relics:
                {
                    <div>
                        Relics
                    </div>
                    break;
                }
            case InfoPageTabs.TileItems:
                {
                    <div>
                        Relics
                    </div>
                    break;
                }
            case InfoPageTabs.Console:
                {
                    <div>
                        Console
                    </div>
                    break;
                }
        }
    </div>
</div>
@code {
    private enum InfoPageTabs
    {
        Relics,
        TileItems,
        Console
    }
    private InfoPageTabs ActiveTab { get; set; } = InfoPageTabs.Console;
}
