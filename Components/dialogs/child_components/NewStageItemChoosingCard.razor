<div class="item-choosing-card">
    <span>
        <InventoryItemWithRarityComponent itemToDisplay="item" />
    </span>

    <button @onclick="()=>OnChosen(item)">Choose</button>
</div>

@code {
    [Parameter]
    public BaseInventoryItem item { get; set; }
    [Parameter]
    public Action<BaseInventoryItem> OnChosen { get; set; }
}
