@inject IJSRuntime JSRuntime
<div class="dialog-content">
    <label class="choose-label unselectable">New stage rewards</label>
    <div class="options-container">
        @foreach (BaseInventoryItem item in ItemsToChooseFrom)
        {
            <NewStageItemChoosingCard item="item" OnChosen="itemChosenAction" />
        }
    </div>
    <ItemsChoosingDialogBottomButtons onRefresh="refreshItemsAction" onSkip="skipAction" tokensCount="tokensCount" />
</div>

@code {
    [Parameter]
    public Action refreshItemsAction { get; set; }
    [Parameter]
    public Action skipAction { get; set; }

    [Parameter]
    public Action<BaseInventoryItem> itemChosenAction { get; set; }
    [Parameter]
    public BaseInventoryItem[] ItemsToChooseFrom { get; set; }
    [Parameter]
    public int tokensCount { get; set; }

}
