<div class="item-card" @onclick="onClick">
    <img src="@ResourcePathsHelper.ResourcesImages(itemForSale.Image)" class="item-img" />
    @if (itemForSale is IWithCounter itemWithCounter)
    {
        <label class="counter-value">@(itemWithCounter.Counter)</label>
    }
    <label class="item-price unselectable">
        @price
        <img src="/resources/images/inventory/diamond.png" />
    </label>
</div>
@code {
    [Parameter]
    public Action onClick { get; set; }
    [Parameter]
    public BaseInventoryItem itemForSale { get; set; }
    [Parameter]
    public int price { get; set; }
}